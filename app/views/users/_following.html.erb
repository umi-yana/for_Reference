<%# --------フォロー数------ %>
  <div class="follow-count">
  <%= link_to user_followings_path(user) do %>
    <h5>フォロー数:<%= user.followings.count %></h5>
    <% end %>
  <%= link_to  user_followers_path(user) do %>
    <h5>フォロワー数:<%= user.followers.count %></h5>
    <% end %>
  </div>
<%# --------(fin)フォロー数------ %>

<%# --------フォロー機能---------- %>
<div class="mt-3"></div>

<% if user.is_valid == true %>
  <% if user != current_user  %>
    <% if user.is_followed_by?(current_user) %>
      <%= link_to user_relationships_path(user),class:'btn btn-danger',method: :delete, remote:true do %>
      <i class="fas fa-user-minus user-followed"></i>フォロー解除
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user),class:'btn btn-primary',method: :post, remote:true do %>
      <i class="fas fa-user-plus user-following"></i>フォロー
      <% end %>
    <% end %>
  <% end %>
  <% else %>
  <botton class="btn btn-danger"> 退会済み　</botton>
<% end %>
  
