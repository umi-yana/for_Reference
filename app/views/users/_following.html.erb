<%# --------フォロー数------ %>
  <div class="follow-count">
    <h5>フォロー数:<%= user.followings.count %></h5>
    <h5>フォロワー数:<%= user.followers.count %></h5>
  </div>
<%# --------(fin)フォロー数------ %>

<%# --------フォロー機能---------- %>
<div class="mt-3"></div>

<% if user.is_valid == true %>
  <% if user != current_user  %>
    <% if user.is_followed_by?(current_user) %>
      <%= link_to user_relationships_path(user),method: :delete, remote:true do %>
      <botton class="btn btn-danger">フォロー解除</botton>
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user),method: :post, remote:true do %>
      <botton class="btn btn-primary">フォローする</botton>
      <% end %>
    <% end %>
  <% end %>
  <% else %>
  <botton class="btn btn-danger"> 退会済み　</botton>
<% end %>
  
<%# -------(fin)フォロー機能---------- %>

