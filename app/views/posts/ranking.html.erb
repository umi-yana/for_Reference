<%= render "layouts/header" %>
<div class="container">
  <div class="row">
    <div class="col">
    
      <h4>投稿数RANKING</h4>
      <table class="table">
  <thead class="thead-lignt">
    <tr>
     <% @all_ranks.each.with_index(1) do |note,i| %>
