      </tr>
      <% end %>
  </thead>
</table>

 
    </div>
    <div class="col">
      <h4>comment ranking</h4>
      <% @all_ranks_select.each do |note| %>
      <%= note.post_body %>
      <% end %>
    </div>


    <div class="col">
    <table class="table">
      <h4 class='text-center'>タグランキング</h4>
      <thead class="thead-lignt">
      <% @all_ranks_tag.each.with_index(1) do |tag,i| %>
