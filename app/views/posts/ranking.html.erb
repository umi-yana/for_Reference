<%= render "layouts/header_nav" %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <h1 class='ranking-title mt-5'><i class="fas fa-medal"></i>Ranking<i class="fas fa-medal"></i></h1>
    </div>

      <div class="row mt-3">
        <%# ---投稿者ランキング--- %>
          <div class="col mt-2">
            <table class="table">
              <h3 class='tag-header'><i class="fas fa-user-alt"></i>Most Post User</h3>
                <thead class="ranking-td ">
                  <% @all_ranks_user.each.with_index(1) do |user,i| %>
                    <tr>
                      <td><h3 class="text-center ">第<%= i %>位</h3></td>
                      <td><h5><%= link_to user.user_name, user_path(user) %></h5></td>
                    </tr>
                  <% end %>
                </thead>
            </table>
          </div>

        <%# ---タグランキング--- %>
        <div class="col mt-2">
          <table class="table">
            <h3 class='tag-header'><i class="fas fa-tags"></i>Most Tag</h3>
              <thead class="ranking-td ">
                <% @all_ranks_tag.each.with_index(1) do |tag,i| %>
                <tr>
                  <td><h3 class="text-center ">第<%= i %>位</h3></td>
                  <td><h5><%= link_to tag.tag_name,post_path(tag.post_ids) %></h5></td>
                </tr>
                <% end %>
              </thead>
          </table>
        </div>

        <%# ---コメントランキング--- %>
        <div class="col mt-2">
          <table class="table">
            <h3 class='tag-header'><i class="fas fa-star"></i>Most Favorite Post</h3>
              <thead class="ranking-td ">
                <% @all_ranks_select.each.with_index(1) do |favorite,i| %>
                <tr>
                  <td class='w-50'><h3 class="text-center ">第<%= i %>位</h3></td>
                  <td><p><%= link_to post_path(favorite.id) do%>
                    <%= (favorite.post_body).truncate(20, omission: '...') %>
                  </p></td>
                  <% end %>
                </tr>
                <% end %>
              </thead>
          </table>
        </div>
      </div>
  </div>




