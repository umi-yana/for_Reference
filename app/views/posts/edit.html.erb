<div class="container">
  <div class="row">
    <div class="col-5">
      <%# --　新規投稿用吹き出し --%>
      <div class="d-flex justify-content-start">
        <div class="left-pop-edit">
          <h2 class='text-center'>新規投稿</h2>
          <div class="d-flex flex-column">
            <%= form_with model:@post,local:true do |f| %>
            <div class="form-group">
                <%= f.label :post_body,"投稿本文" %>
                <%= f.text_area :post_body,class:'w-50' %>
                </div>
              <div class="d-flex flex-row">
              <div class="form-group">
                <%= f.label :select_a,"選択肢A" %>
                <%= f.text_area :select_a,class:'h-200' %>
                </div>
                <div class="form-group ml-3">
                <%= f.label:select_b,"選択肢B" %>
                <%= f.text_area :select_b %>
              </div>
              </div>
              <%= f.label:post_image,"画像選択" %>
              <%= f.attachment_field :post_image %>
              <div class="form-group text-center">
              <%= f.submit "投稿する",class:'btn btn-danger btn-lg' %>
              <%= link_to "削除", post_path(@post),method: :DELETE,class:'btn btn-danger btn-lg m2' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
      <div class="w-100"></div>
      <%# -- ↑改行↑ -- %>
    <%# -- [fin]左側吹き出し --%>

    </div>
  </div>
</div>


