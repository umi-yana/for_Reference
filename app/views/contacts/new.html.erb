<%= render "layouts/header_nav" %>

<div class="container mt-5">
  <div class="row  justify-content-center">
    <div class="col-8 mt-5">
     <h2 class='text-center'>お問い合わせフォーム</h2>
        <%= form_with(model:@contact, url:confirm_path,local:true) do |f| %>
          <%= render 'layouts/error_msg', model: f.object %>
            <div class="input-contact">
              <div class="input-group mt-3" >
                <span class="input-group-text">お名前</span>
                <%= f.text_field :contact_name, placeholder:"Name",class:"form-control",id:"exampleFormControlTextarea2",rows:"2" %>
              </div>

              <div class="input-group mt-3" >
                <span class="input-group-text">ご連絡先</span>
                <%= f.text_field :contact_email, placeholder:"sample@example.com",class:"form-control",id:"exampleFormControlTextarea2",rows:"1" %>
              </div>

              <div class="input-group mt-3" >
                <span class="input-group-text">ご用件</span>
                <%= f.text_field :contact_subject,placeholder:"Subject",class:"form-control",id:"exampleFormControlTextarea2",rows:"3" %>
              </div>

              <div class="input-group mt-5">
                <span class="input-group-text">メッセージ</span>
                <%= f.text_area :contact_message, placeholder:"Message",class:"form-control",id:"exampleFormControlTextarea2",rows:"10"  %>
              </div>

              <div class="text-center mt-4">
                <%= f.submit '入力内容確認',class:"btn btn-info" %>
              </div>

            </div>
        <% end %>
    </div>
  </div>
</div>


<style>

.input-contact .input-group-text {
  width:150px;
}
</style>